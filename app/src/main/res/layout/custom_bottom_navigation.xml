<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_01_black">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/bottomChipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true"
        tools:ignore="MissingConstraints">

        <com.google.android.material.chip.Chip
            android:id="@+id/homeFragment"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_55dp"
            android:checked="true"
            android:fontFamily="@font/montserrat"
            android:text="@string/home"
            android:textColor="@color/bkg_chip_color_selector"
            android:textStyle="bold"
            app:chipIconTint="@color/bkg_chip_color_selector"
            app:chipIcon="@drawable/ic_home"
            app:chipIconSize="@dimen/dimen_20dp"
            app:chipIconEnabled="true"
            app:chipBackgroundColor="@color/bkg_chip_selector"
            app:chipEndPadding="@dimen/dimen_50dp"
            app:chipStartPadding="@dimen/dimen_50dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/favoritesFragment"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_55dp"
            android:checked="false"
            android:fontFamily="@font/montserrat"
            android:text="@string/favorites"
            android:textColor="@color/bkg_chip_color_selector"
            android:textStyle="bold"
            app:chipIconTint="@color/bkg_chip_color_selector"
            app:chipIcon="@drawable/ic_uncolored_heart"
            app:chipIconSize="@dimen/dimen_20dp"
            app:chipIconEnabled="true"
            app:chipBackgroundColor="@color/bkg_chip_selector"
            app:chipEndPadding="@dimen/dimen_50dp"
            app:chipStartPadding="@dimen/dimen_50dp" />
    </com.google.android.material.chip.ChipGroup>
</androidx.constraintlayout.widget.ConstraintLayout>