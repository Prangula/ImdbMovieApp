<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_01_black">

    <EditText
        android:id="@+id/homeSearchEditText"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/bkg_search_edittext"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/dimen_10dp"
        android:fontFamily="@font/montserrat"
        android:hint="@string/search_text"
        android:inputType="text"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:paddingVertical="@dimen/dimen_8dp"
        android:textColor="@color/neutral_08_whisper"
        android:textColorHint="@color/neutral_05_light_grey"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintEnd_toStartOf="@+id/homeGenresButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.ImageView
        android:id="@+id/homeGenresButton"
        android:layout_width="@dimen/dimen_35dp"
        android:layout_height="@dimen/dimen_35dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_30dp"
        android:background="@drawable/bkg_circle_yellow_stroke"
        android:scaleType="center"
        android:src="@drawable/ic_show_tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeCancelTextview"
        style="@style/Theme.ImdbMovieApp.BaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_50dp"
        android:text="@string/cancel"
        android:textColor="@color/neutral_08_whisper"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeMoviesTextview"
        style="@style/Theme.ImdbMovieApp.BaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginVertical="@dimen/dimen_20dp"
        android:text="@string/movies"
        android:textColor="@color/yellow_primary"
        android:textSize="@dimen/dimen_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeGenresRecyclerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeGenresRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/homeGenresButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeMoviesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeMoviesTextview" />

</androidx.constraintlayout.widget.ConstraintLayout>